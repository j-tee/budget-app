<% if @transactions.present? %>
<%@transactions.each do |transaction|%>
  <div class="col-md-12 mb-3">
    <div class="card w-100">
      <div class="card-body d-flex">
        <div class="flex-grow-1 name">
            <%= transaction.transaction_item.name %>          
        </div>
        <div class="text-right amount">
            <%= transaction.transaction_item.amount %>
        </div>
      </div>
    </div>
  </div>
  <%end%>
<% end %>
<div class="btn-container">
    <%= link_to new_category_transaction_item_path(category_id: params[:category_id]), class:"link-container" do %>
        <button class="btn btn-success">Add Transaction</button>
    <% end %>
</div>
